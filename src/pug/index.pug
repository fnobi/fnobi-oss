extends /layout/_default-layout

prepend config-block
  - page_name = ''

//- append stylesheet-block

//- append javascript-block

block content-block
  .header
    h1 fnobi-oss
  .article
    each work in works
      article.article__item
        h2
          a(href=`https://github.com/${work.github}` target="_blank")= work.name
        p= work.desc
        if work.article
          p: a(href=work.article target="_blank") 紹介記事